    <script type="text/javascript" src="/javascripts/jiazai.min.js"></script>
    <script type="text/javascript" src="https://logs.newapi.com/jd/ad?f=ma09"></script>
  </head>
  <body>
	<div id="app">
		<div  class="container b_f7">
			<header class="header_top" style="text-align: center;">
